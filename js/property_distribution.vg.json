{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Property Distribution in Countries",
    "fontSize": 20
  },
  "width": 800,
  "height": 800,
  "projection": {
    "type": "mercator"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_graticules_30.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/liawyihui/3179/main/data/aggregated_world_data.csv"
            },
            "key": "country",
            "fields": [
              "count"
            ]
          }
        },
        {
          "calculate": "datum.count",
          "as": "distribution"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke":"black"
      },
      "encoding": {
        "color": {
          "field": "distribution",
          "type": "quantitative",
          "title": "Number of Properties",
          "scale": {
            "scheme": "purples",
            "type": "threshold",
            "domain": [
              2000,
              4000,
              6000,
              8000,
              13000
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "distribution",
            "type": "quantitative",
            "title": "Number of Properties"
          }
        ]
      }
    }
  ]
}